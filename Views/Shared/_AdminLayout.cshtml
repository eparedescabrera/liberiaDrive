<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panel Admin</title>

    <!-- âœ… CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/tabla.css" />

    <!-- âœ… Select2 CSS (solo CSS va en <head>) -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

    <style>
        body {
            min-height: 100vh;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #1e2a38;
            color: #fff;
            position: fixed;
            top: 0;
            bottom: 0;
            padding-top: 1rem;
            transition: all 0.3s;
        }

        .sidebar h4 {
            text-align: center;
            margin-bottom: 1rem;
            font-weight: bold;
            color: #ffc107;
        }

        .sidebar a {
            color: #cfd8dc;
            text-decoration: none;
            padding: 10px 20px;
            display: block;
            transition: all 0.2s;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background-color: #0d6efd;
            color: white;
        }

        .content {
            margin-left: 250px;
            padding: 2rem;
            flex: 1;
        }

        .navbar {
            margin-left: 250px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        @@media (max-width: 991px) {
            .sidebar {
                width: 0;
                overflow: hidden;
            }
            .content, .navbar {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <h4>ðŸš— LiberiaDrive</h4>
        <a href="/Admin/Index" class="active"><i class="bi bi-speedometer2"></i> Panel</a>
        <a href="/Clientes/Index"><i class="bi bi-people"></i> Clientes</a>
        <a href="/Instructores/Index"><i class="bi bi-person-badge"></i> Instructores</a>
        <a href="/Vehiculos/Index"><i class="bi bi-car-front"></i> VehÃ­culos</a>
        <a href="/Licencias/Index"><i class="bi bi-car-front"></i> Licencias</a>
        <a href="/Cursos/Index"><i class="bi bi-calendar2-check"></i> Cursos</a>
        <a href="/Citas/Index"><i class="bi bi-calendar2-check"></i> Citas</a>
        <a href="/Pagos/Index"><i class="bi bi-cash"></i> Pagos</a>
        <a href="/Reportes/Index"><i class="bi bi-graph-up"></i> Reportes</a>

        <hr class="text-secondary mx-3" />
        <a href="/Auth/Logout" class="text-danger fw-bold"><i class="bi bi-box-arrow-right"></i> Cerrar sesiÃ³n</a>
    </div>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light sticky-top">
        <div class="container-fluid">
            <button class="btn btn-outline-primary d-lg-none" id="toggleSidebar">
                <i class="bi bi-list"></i>
            </button>
            <span class="navbar-brand ms-2">Panel Administrativo</span>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="content">
        @RenderBody()
    </main>

    <footer class="text-center py-3 border-top">
        <small class="text-muted">Â© @DateTime.Now.Year LiberiaDrive | Panel Administrativo</small>
    </footer>

    <!-- âœ… SCRIPTS (orden correcto) -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        // Toggle sidebar en mÃ³vil
        document.getElementById("toggleSidebar")?.addEventListener("click", function () {
            const sidebar = document.getElementById("sidebar");
            if (sidebar.style.width === "250px" || sidebar.style.width === "")
                sidebar.style.width = "0";
            else
                sidebar.style.width = "250px";
        });
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>
