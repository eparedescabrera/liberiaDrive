@model LiberiaDriveMVC.Models.Licencia
@{
    Layout = null;
}

<h5 class="fw-bold text-danger mb-3">🗑️ Eliminar Licencia</h5>
<hr />

<p class="text-center">¿Seguro que deseas eliminar la licencia <strong>@Model.TipoLicencia</strong>?</p>

<form id="formEliminarLicencia">
    <input type="hidden" id="IdLicencia" value="@Model.IdLicencia" />
    
    <div class="text-end">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    </div>
</form>
