@model LiberiaDriveMVC.Models.HorarioInstructor

<div class="p-3">
    <form id="formCrearHorario">

        <div class="form-group mb-3">
            <label><strong>Instructor:</strong></label>
            <select id="IdInstructor" name="IdInstructor" class="form-control select2" style="width:100%;" required></select>
        </div>

        <div class="form-group mb-3">
            <label><strong>Día de la Semana:</strong></label>
            <select name="DiaSemana" class="form-select" required>
                <option value="">Seleccione...</option>
                @foreach (var dia in new[] {"Lunes","Martes","Miércoles","Jueves","Viernes","Sábado"})
                {
                    <option value="@dia">@dia</option>
                }
            </select>
        </div>

        <div class="form-group mb-3">
            <label><strong>Hora de Inicio:</strong></label>
            <input type="time" class="form-control" name="HoraInicio" required />
        </div>

        <div class="form-group mb-3">
            <label><strong>Hora de Fin:</strong></label>
            <input type="time" class="form-control" name="HoraFin" required />
        </div>

        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="Disponible" name="Disponible" value="true" checked />
            <label class="form-check-label" for="Disponible">Disponible</label>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Guardar
            </button>
        </div>
    </form>
</div>
