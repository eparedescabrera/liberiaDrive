@{
    ViewData["Title"] = "Horarios de Instructores";
    var horarios = ViewBag.Horarios as System.Data.DataTable;
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3><i class="bi bi-clock"></i> Horarios de Instructores</h3>
    <button class="btn btn-success" onclick="abrirModalCrearHorario()">
        <i class="bi bi-plus-circle"></i> Nuevo Horario
    </button>
</div>

<table id="tablaHorarios" class="table table-striped table-bordered">
    <thead class="table-dark text-center">
        <tr>
            <th>Instructor</th>
            <th>DÃ­a</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow row in horarios.Rows)
        {
            <tr>
                <td>@row["Instructor"]</td>
                <td>@row["DiaSemana"]</td>
                <td>@row["HoraInicio"]</td>
                <td>@row["HoraFin"]</td>
                <td>@Html.Raw(row["Estado"])</td>
                <td class="text-center">
                    <button class="btn btn-warning btn-sm" onclick="abrirModalEditar(@row["IdHorario"])"><i class="bi bi-pencil"></i></button>
                    <button class="btn btn-danger btn-sm" onclick="abrirModalEliminar(@row["IdHorario"])"><i class="bi bi-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modalHorario" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 id="tituloModal" class="modal-title"></h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="contenidoModal"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/horarioInstructor.js"></script>
}
