@{
    ViewData["Title"] = "Gesti√≥n de Citas";
    Layout = "_AdminLayout";
}

<h2 class="fw-bold text-center my-3 text-primary">
    <i class="bi bi-calendar2-check"></i> Gesti√≥n de Citas
</h2>

<!-- üîπ Bot√≥n Nueva Cita -->
<div class="text-end mb-3">
    <button class="btn btn-primary shadow-sm px-3" onclick="abrirModalCrearCita()">
        <i class="bi bi-plus-circle"></i> Nueva Cita
    </button>
</div>

<!-- üîπ Tabla -->
<div class="table-responsive shadow-sm bg-white rounded p-3">
    <table class="table table-bordered table-hover align-middle mb-0">
        <thead class="table-dark text-center">
            <tr>
                <th>Cliente</th>
                <th>Tipo de Examen</th>
                <th>Fecha de Cita</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow row in ViewBag.Citas.Rows)
            {
                string estado = row["Estado"].ToString();
                string badge = estado == "Finalizado"
                    ? "bg-success"
                    : estado == "Pendiente"
                        ? "bg-warning text-dark"
                        : "bg-secondary";

                <tr>
                    <!-- üëá Muestra el nombre, no el ID -->
                    <td>@row["NombreCliente"]</td>
                    <td>@row["TipoExamen"]</td>
                    <td>@row["FechaCita"]</td>
                    <td class="text-center">
                        <span class="badge @badge">@estado</span>
                    </td>
                    <td class="text-center">
                        <button class="btn btn-warning btn-sm"
                                onclick="abrirModalEditarCita(@row["IdCita"])">
                            ‚úèÔ∏è Editar
                        </button>

                        <button class="btn btn-danger btn-sm"
                                onclick="abrirModalEliminarCita(@row["IdCita"])">
                            üóëÔ∏è Eliminar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- üîπ Modal Reutilizable -->
<div class="modal fade" id="modalCita" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="tituloModal">Cita</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="contenidoModal">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    
    <script src="~/js/citas.js?v=@DateTime.Now.Ticks"></script>
}
