@{
    ViewData["Title"] = "Sesiones Pr√°cticas";
    var sesiones = ViewBag.Sesiones as System.Data.DataTable;
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3><i class="bi bi-calendar2-week"></i> Sesiones Pr√°cticas</h3>
    <button class="btn btn-success" onclick="abrirModalCrearSesion()">
        <i class="bi bi-plus-circle"></i> Nueva Sesi√≥n
    </button>
</div>

<table id="tablaSesiones" class="table table-striped table-bordered align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>Cliente</th>
            <th>Instructor</th>
            <th>Veh√≠culo</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow row in sesiones.Rows)
        {
            <tr class="text-center">
                <td>@row["Cliente"]</td>
                <td>@row["Instructor"]</td>
                <td>@row["Vehiculo"]</td>
                <td>@row["FechaSesion"]</td>
                <td>@Html.Raw(row["Estado"])</td>
                <td>
                    <button class="btn btn-warning btn-sm me-1" onclick="abrirModalEditar(@row["IdSesionPractica"])">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-danger btn-sm" onclick="abrirModalEliminar(@row["IdSesionPractica"])">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- üß© Modal gen√©rico -->
<div class="modal fade" id="modalSesion" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 id="tituloModal" class="modal-title"></h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="contenidoModal"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/sesionPractica.js"></script>
}
