@model LiberiaDriveMVC.Models.Cliente

@{
    Layout = null;
    var fecha = DateTime.Now.ToString("yyyy-MM-dd");
}

<h5>Registrar Cliente</h5>
<hr />

<form id="formCrearCliente" asp-action="Create" asp-controller="Clientes" method="post">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Apellidos" class="form-label"></label>
        <input asp-for="Apellidos" class="form-control" placeholder="Ingrese los apellidos" />
        <span asp-validation-for="Apellidos" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Contacto" class="form-label"></label>
        <input asp-for="Contacto" class="form-control" placeholder="Ej: 88887777" />
        <span asp-validation-for="Contacto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FechaRegistro" class="form-label"></label>
        <input asp-for="FechaRegistro" class="form-control" type="date" value="@fecha" />
        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Estado" class="form-check-input" type="checkbox" checked />
        <label asp-for="Estado" class="form-check-label"></label>
    </div>

    <div class="mt-3 text-end">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
