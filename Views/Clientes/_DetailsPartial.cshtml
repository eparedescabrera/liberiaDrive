@model LiberiaDriveMVC.Models.Cliente
@{
    Layout = null;
}

<h5 class="fw-bold mb-3">Detalles del Cliente</h5>

<div class="row mb-2">
    <div class="col-md-6">
        <strong>Nombre:</strong> @Model.Nombre @Model.Apellidos
    </div>
    <div class="col-md-6">
        <strong>Estado:</strong>
        @if (Model.Estado)
        {
            <span class="badge bg-success">Activo</span>
        }
        else
        {
            <span class="badge bg-danger">Inactivo</span>
        }
    </div>
</div>

<hr />

<div class="mb-2">
    <strong>Contacto:</strong> @(string.IsNullOrWhiteSpace(Model.Contacto) ? "No registrado" : Model.Contacto)
</div>
<div class="mb-2">
    <strong>Fecha de Registro:</strong> @Model.FechaRegistro.ToString("dd/MM/yyyy")
</div>

<div class="text-end mt-4">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
</div>
