@{
    ViewData["Title"] = "Gesti√≥n de Clientes";
    Layout = "_AdminLayout";
}

<h2 class="fw-bold text-center my-3">Gesti√≥n de Clientes</h2>

<!-- üîπ Bot√≥n Nuevo Cliente -->
<div class="text-end mb-3">
    <button class="btn btn-primary" onclick="abrirModalCrear()">
    ‚ûï Nuevo Cliente
</button>

</div>

<!-- üîπ Tabla de Clientes -->
<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Contacto</th>
            <th>Fecha Registro</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow row in ViewBag.Clientes.Rows)
        {
            <tr class="@(Convert.ToBoolean(row["Estado"]) ? "" : "table-secondary")">
                
                <td>@row["Nombre"]</td>
                <td>@row["Apellidos"]</td>
                <td>@row["Contacto"]</td>
                <td>@Convert.ToDateTime(row["FechaRegistro"]).ToString("yyyy-MM-dd")</td>
                <td class="text-center">
                    @if (Convert.ToBoolean(row["Estado"]))
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>
                <td class="text-center">
                    <button class="btn btn-warning btn-sm"
                            onclick="abrirModalEditar(@row["IdCliente"])">
                        ‚úèÔ∏è Editar
                    </button>

                    <button class="btn btn-info btn-sm text-white"
                            onclick="abrirModalDetalles(@row["IdCliente"])">
                        üîç Ver
                    </button>

                    <a asp-action="Delete"
                       asp-route-id="@row["IdCliente"]"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('¬øEliminar este cliente?')">
                        üóëÔ∏è Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- üîπ Modal Reutilizable -->
<div class="modal fade" id="modalCliente" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="tituloModal">Cliente</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body" id="contenidoModal">
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- üîπ Secci√≥n de Scripts -->
@section Scripts {
    <script src="~/js/clientes.js"></script>
     <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/clientes.js?v=@DateTime.Now.Ticks"></script>
}
