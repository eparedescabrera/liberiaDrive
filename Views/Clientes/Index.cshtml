@{
    ViewData["Title"] = "Lista de Clientes";
    var clientes = ViewBag.Clientes as System.Data.DataTable;
}

<h2>@ViewData["Title"]</h2>

<!-- üîô BOT√ìN VOLVER -->
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mb-3">
    ‚¨ÖÔ∏è Volver al inicio
</a>

<button class="btn btn-primary mb-3"
        onclick="abrirModal('@Url.Action("Create", "Clientes")', null, 'Registrar Nuevo Cliente')">
    ‚ûï Nuevo Cliente
</button>


@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Contacto</th>
            <th>Fecha Registro</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (clientes != null && clientes.Rows.Count > 0)
        {
            foreach (System.Data.DataRow c in clientes.Rows)
            {
                <tr>
                    <td>@c["IdCliente"]</td>
                    <td>@c["Nombre"]</td>
                    <td>@c["Apellidos"]</td>
                    <td>@c["Contacto"]</td>
                    <td>@Convert.ToDateTime(c["FechaRegistro"]).ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (Convert.ToBoolean(c["Estado"]))
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </td>
                    <td>
                        <!-- üîç BOT√ìN VER -->
                        <button class="btn btn-info btn-sm" 
                                onclick="abrirModal('@Url.Action("Details", "Clientes")', @c["IdCliente"], 'Detalle de Cliente')">
                            Ver
                        </button>

                        <!-- ‚úèÔ∏è BOT√ìN EDITAR -->
                       <button type="button" 
        class="btn btn-warning btn-sm" 
        onclick="abrirModal('/Clientes/Edit', '@c["IdCliente"]', 'Editar Cliente')">
    ‚úèÔ∏è Editar
</button>


                        <!-- üóëÔ∏è BOT√ìN ELIMINAR -->
                        <button class="btn btn-danger btn-sm" 
                                onclick="confirmarEliminar('@c["IdCliente"]', '@c["Nombre"]', '@c["Apellidos"]')">
                            Eliminar
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="7" class="text-center">No hay registros.</td></tr>
        }
    </tbody>
</table>

<!-- ==================== MODAL DIN√ÅMICO ==================== -->
<!-- Modal Gen√©rico -->
<div class="modal fade" id="clienteModal" tabindex="-1" aria-labelledby="clienteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="clienteModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body" id="clienteModalBody">
                <!-- Aqu√≠ se carga din√°micamente el contenido v√≠a AJAX -->
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Script personalizado de clientes -->
   <script src="~/js/clientes.js" asp-append-version="true"></script>

}
