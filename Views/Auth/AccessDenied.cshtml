@{
    Layout = null;
    ViewData["Title"] = "Acceso Denegado";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #007bff, #00a8ff);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
    }

    .card {
        background-color: rgba(0, 0, 0, 0.8);
        border-radius: 1rem;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        text-align: center;
        padding: 2rem;
        width: 450px;
    }

    .emoji {
        font-size: 4rem;
        margin-bottom: 1rem;
    }
</style>

<div class="card">
    <div class="emoji">🚫</div>
    <h2 class="text-warning">Acceso Denegado</h2>
    <p class="lead mb-3">No tienes permisos para acceder a esta página.</p>

    <hr class="border-light">

    <p class="mb-4">
        Si crees que esto es un error, contacta con el administrador del sistema.
    </p>

    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-light w-100 mb-2">
        🔑 Ir al inicio de sesión
    </a>
    <a asp-controller="Cliente" asp-action="Index" class="btn btn-warning w-100">
        🏠 Volver al inicio
    </a>
</div>
