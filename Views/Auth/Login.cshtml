@model LiberiaDriveMVC.Models.ViewModels.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesi√≥n";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #007bff, #00a8ff);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', sans-serif;
    }
    .card {
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        width: 400px;
    }
</style>

<div class="card">
    <div class="card-body">
        <h3 class="text-center mb-4 text-primary">üîê Iniciar Sesi√≥n</h3>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center">@TempData["Success"]</div>
        }

        <form method="post" asp-action="Login" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="NombreUsuario" class="form-label"></label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Contrasena" class="form-label"></label>
                <input asp-for="Contrasena" class="form-control" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Ingresar</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Register" class="text-decoration-none">¬øNo tienes cuenta? Reg√≠strate</a>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
