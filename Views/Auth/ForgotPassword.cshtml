@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">Recuperar Contraseña</h3>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-success text-center">@Html.Raw(ViewBag.Mensaje)</div>
                    }
                    else
                    {
                        <form asp-action="ForgotPassword" method="post">
                            <div class="mb-3">
                                <label class="form-label">Correo registrado</label>
                                <input type="email" name="correo" class="form-control" placeholder="usuario@mail.com" required />
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Generar enlace</button>
                        </form>
                    }

                    <div class="text-center mt-3">
                        <a asp-action="Login">Volver al inicio de sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
