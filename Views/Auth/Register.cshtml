@model LiberiaDriveMVC.Models.ViewModels.RegisterViewModel

@{
    Layout = null;
    ViewData["Title"] = "Registrarse";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center" style="min-height:100vh;">
    <div class="card shadow-lg border-0 p-4" style="width:400px;">
        <h3 class="text-center mb-4">üßç Registro de Cliente</h3>

        <form method="post" asp-action="Register" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="NombreUsuario" class="form-label"></label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contrasena" class="form-label"></label>
                <input asp-for="Contrasena" class="form-control" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmacionContrasena" class="form-label"></label>
                <input asp-for="ConfirmacionContrasena" class="form-control" />
                <span asp-validation-for="ConfirmacionContrasena" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Registrarme</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" class="text-decoration-none">Ya tengo cuenta</a>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
