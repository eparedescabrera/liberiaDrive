@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">Restablecer Contraseña</h3>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="ResetPassword" method="post">
                        <input type="hidden" name="token" value="@ViewBag.Token" />

                        <div class="mb-3">
                            <label class="form-label">Nueva contraseña</label>
                            <input type="password" name="nuevaContrasena" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Confirmar contraseña</label>
                            <input type="password" name="confirmarContrasena" class="form-control" required />
                        </div>

                        <button type="submit" class="btn btn-success w-100">Actualizar Contraseña</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
