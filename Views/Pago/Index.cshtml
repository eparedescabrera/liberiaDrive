@{
    ViewData["Title"] = "Gesti√≥n de Pagos";
        var pagos = ViewBag.Pagos as System.Data.DataTable;
    Layout = "_AdminLayout";
}

<h2 class="mb-4"><i class="bi bi-cash-coin"></i> Gesti√≥n de Pagos</h2>

<!-- üîπ BOT√ìN NUEVO -->
<div class="text-end mb-3">
    <button class="btn btn-primary" onclick="abrirModalCrearPago()">‚ûï Nuevo Pago</button>
</div>

<!-- üîπ TABLA DE PAGOS -->
<table class="table table-striped table-bordered align-middle text-center shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Cliente</th>
            <th>Curso</th>
            <th>Fecha Pago</th>
            <th>Monto (‚Ç°)</th>
            <th>Tipo de Pago</th>
            <th>Estado</th>
            <th style="width:120px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Pagos != null && ViewBag.Pagos.Rows.Count > 0)
        {
            foreach (System.Data.DataRow row in ViewBag.Pagos.Rows)
            {
                <tr>
                    <td>@row["NombreCliente"]</td>
                    <td>@row["NombreCurso"]</td>
                    <td>@Convert.ToDateTime(row["FechaPago"]).ToString("dd/MM/yyyy")</td>
                    <td>@string.Format("{0:N2}", row["Monto"])</td>
                    <td>@row["TipoPago"]</td>
                    <td>
                        @if (row["Estado"].ToString() == "Completado")
                        {
                            <span class="badge bg-success px-3 py-2">Completado</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark px-3 py-2">Pendiente</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-warning" title="Editar"
                                onclick="abrirModalEditarPago(@row["IdPago"])">
                            ‚úèÔ∏è
                        </button>
                        <button class="btn btn-sm btn-danger" title="Eliminar"
                                onclick="abrirModalEliminarPago(@row["IdPago"])">
                            üóëÔ∏è
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-muted">No hay pagos registrados.</td>
            </tr>
        }
    </tbody>
</table>

<!-- üîπ MODAL GENERAL -->
<div class="modal fade" id="modalPago" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="tituloModal"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="contenidoModal">
                <!-- El contenido se carga din√°micamente por AJAX -->
            </div>
        </div>
    </div>
</div>

<!-- üîπ SCRIPTS -->
@section Scripts {
    <script src="~/js/pago.js"></script>
}
