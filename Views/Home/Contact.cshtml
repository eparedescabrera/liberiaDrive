@{
    Layout = "_Layout";
}

<section class="container py-5">
    <h2 class="fw-bold mb-4 text-center">Contáctanos</h2>

    <div class="row">
        <div class="col-md-6">
            <h5>Ubicación</h5>
            <p><i class="bi bi-geo-alt"></i> Liberia, Guanacaste, Costa Rica</p>

            <h5>Teléfono</h5>
            <p><i class="bi bi-telephone"></i> +506 8888-7777</p>

            <h5>Correo Electrónico</h5>
            <p><i class="bi bi-envelope"></i> info@liberiadrive.com</p>
        </div>

        <div class="col-md-6">
            <form>
                <div class="mb-3">
                    <label>Nombre</label>
                    <input type="text" class="form-control" placeholder="Tu nombre" />
                </div>
                <div class="mb-3">
                    <label>Correo</label>
                    <input type="email" class="form-control" placeholder="Tu correo" />
                </div>
                <div class="mb-3">
                    <label>Mensaje</label>
                    <textarea class="form-control" rows="4"></textarea>
                </div>
                <button class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>
</section>
