@model LiberiaDriveMVC.Models.MantenimientoVehiculo

<form id="formEditarMantenimiento">
    <div class="modal-body">

        <!-- ID ocultos -->
        <input type="hidden" asp-for="IdMantenimiento" />
        <input type="hidden" asp-for="IdVehiculo" />

        <!-- Vehículo (solo lectura) -->
        <div class="mb-3">
            <label class="form-label fw-bold">Vehículo</label>
            <input type="text" class="form-control" value="@Model.IdVehiculoNavigation?.Marca" readonly />
        </div>

        <!-- Fecha de mantenimiento -->
        <div class="mb-3">
            <label asp-for="FechaMantenimiento" class="form-label fw-bold">Fecha de Mantenimiento</label>
            <input asp-for="FechaMantenimiento" class="form-control" type="date"
                   value="@Model.FechaMantenimiento.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="FechaMantenimiento" class="text-danger"></span>
        </div>

        <!-- Tipo de mantenimiento -->
        <div class="mb-3">
            <label asp-for="TipoMantenimiento" class="form-label fw-bold">Tipo de Mantenimiento</label>
            <input asp-for="TipoMantenimiento" class="form-control" maxlength="100" placeholder="Ej: Cambio de aceite" />
            <span asp-validation-for="TipoMantenimiento" class="text-danger"></span>
        </div>

       <!-- Costo -->
<div class="mb-3">
    <label asp-for="Costo" class="form-label fw-bold">Costo (₡)</label>
    <input asp-for="Costo" class="form-control" type="number" step="0.01" min="0"
           value="@Model.Costo.ToString("0.00")" />
    <span asp-validation-for="Costo" class="text-danger"></span>
</div>


        <!-- Descripción -->
        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
            <textarea asp-for="Descripcion" class="form-control" rows="3"
                      placeholder="Detalles adicionales sobre el mantenimiento...">@Model.Descripcion</textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bi bi-x-circle"></i> Cancelar
        </button>
        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Guardar Cambios
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
