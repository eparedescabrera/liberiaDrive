@{
    ViewData["Title"] = "Mantenimientos de Veh√≠culos";
    var mantenimientos = ViewBag.Mantenimientos as System.Data.DataTable;
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3><i class="bi bi-tools"></i> Mantenimientos de Veh√≠culos</h3>
    <button class="btn btn-success" onclick="abrirModalCrearMantenimiento()">
        <i class="bi bi-plus-circle"></i> Nuevo Mantenimiento
    </button>
</div>

<table id="tablaMantenimientos" class="table table-striped table-bordered align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>Veh√≠culo</th>
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Costo</th>
            <th>Descripci√≥n</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (System.Data.DataRow row in mantenimientos.Rows)
        {
            <tr>
                <td>@row["Vehiculo"]</td>
                <td>@row["FechaMantenimiento"]</td>
                <td>@row["TipoMantenimiento"]</td>
                <td>‚Ç°@string.Format("{0:N2}", row["Costo"])</td>
                <td>@row["Descripcion"]</td>
                <td class="text-center">
                    <button class="btn btn-warning btn-sm" onclick="abrirModalEditar(@row["IdMantenimiento"])">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-danger btn-sm" onclick="eliminarMantenimiento(@row["IdMantenimiento"])">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- üß© Modal gen√©rico -->
<div class="modal fade" id="modalMantenimiento" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 id="tituloModal" class="modal-title"></h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="contenidoModal"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/mantenimientoVehiculo.js"></script>
}
