@{
    ViewData["Title"] = "Gesti√≥n de Veh√≠culos";
    Layout = "_AdminLayout";
}

<h2 class="fw-bold text-center my-3">üöó Gesti√≥n de Veh√≠culos</h2>
<!-- üîç Buscador -->
<form class="d-flex justify-content-end mb-3" method="get">
    <input type="text"
           name="searchPlaca"
           value="@ViewBag.SearchPlaca"
           class="form-control w-25 me-2"
           placeholder="üîé Buscar por placa..."
           autocomplete="off" />
    <button class="btn btn-primary">Buscar</button>

    @if(!string.IsNullOrWhiteSpace(ViewBag.SearchPlaca))
    {
        <a href="/Vehiculos/Index" class="btn btn-secondary ms-2">Limpiar</a>
    }
</form>

<!-- üîπ Bot√≥n Nuevo Veh√≠culo -->
<div class="text-end mb-3">
    <button class="btn btn-primary" onclick="abrirModalCrear()">
        ‚ûï Nuevo Veh√≠culo
    </button>
</div>

<!-- üîπ Tabla Responsiva Mejorada -->
<div class="table-responsive">
    <table class="table table-hover align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Transmisi√≥n</th>
                <th>Estado</th>
                <th>Placa</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (System.Data.DataRow row in ViewBag.Vehiculos.Rows)
        {
            <tr class="@(Convert.ToBoolean(row["Estado"]) ? "" : "table-secondary")">
                <td>@row["Marca"]</td>
                <td>@row["Modelo"]</td>
                <td>@row["Transmision"]</td>
                <td>
                    @if (Convert.ToBoolean(row["Estado"]))
                    { <span class="badge bg-success">Activo</span> }
                    else
                    { <span class="badge bg-danger">Inactivo</span> }
                </td>
                <td>@row["Placa"]</td>
                <td>
                    <div class="d-flex flex-wrap gap-1 justify-content-center">

                        <button class="btn btn-warning btn-sm"
                                onclick="abrirModalEditar(@row["IdVehiculo"])">
                            <i class="bi bi-pencil-square"></i>
                            <span class="d-none d-md-inline"> Editar</span>
                        </button>

                        <button class="btn btn-info btn-sm text-white"
                                onclick="abrirModalDetalles(@row["IdVehiculo"])">
                            <i class="bi bi-search"></i>
                            <span class="d-none d-md-inline"> Ver</span>
                        </button>

                        <button class="btn btn-danger btn-sm"
                                onclick="abrirModalEliminar(@row["IdVehiculo"])">
                            <i class="bi bi-trash"></i>
                            <span class="d-none d-md-inline"> Eliminar</span>
                        </button>

                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>


<!-- üîπ Modal Gen√©rico -->
<div class="modal fade" id="modalVehiculo" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="tituloModal">Veh√≠culo</h5>
                <button type="button" class="btn-close btn-close-white"
                        data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body" id="contenidoModal">
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- üîπ Scripts -->
@section Scripts {
    <script src="~/js/vehiculo.js?v=@DateTime.Now.Ticks"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}
