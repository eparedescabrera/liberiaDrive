@using System.Data
@{
    ViewBag.Title = "Gesti√≥n de Veh√≠culos";
    var vehiculos = ViewBag.Vehiculos as DataTable;
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h2 class="mb-4">üöó Gesti√≥n de Veh√≠culos</h2>

    <!-- üîç Buscador -->
    <div class="mb-3 d-flex gap-2">
        <input type="text" id="txtBuscarPlaca" class="form-control w-25" placeholder="Buscar por placa...">
        <button class="btn btn-primary" id="btnBuscar">Buscar</button>
        <button class="btn btn-success" id="btnNuevo">‚ûï Nuevo Veh√≠culo</button>
    </div>

    <!-- üßæ Tabla -->
    <table class="table table-bordered table-hover align-middle" id="tablaVehiculos">
        <thead class="table-light">
            <tr>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Transmisi√≥n</th>
                <th>Placa</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody id="tbodyVehiculos">
            @if (vehiculos != null)
            {
                foreach (DataRow row in vehiculos.Rows)
                {
                    <tr>
                        <td>@row["Marca"]</td>
                        <td>@row["Modelo"]</td>
                        <td>@row["Transmision"]</td>
                        <td>@row["Placa"]</td>
                        <td>@Html.Raw(row["Estado"].ToString())</td>
                        <td>
                            <button class="btn btn-warning btn-sm" onclick="abrirModalEditar(@row["IdVehiculo"])">
                                ‚úèÔ∏è Editar
                            </button>
                            <button class="btn btn-danger btn-sm" onclick="eliminarVehiculo(@row["IdVehiculo"])">
                                üóëÔ∏è Eliminar
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- üîπ Modal para Crear/Editar -->
<div class="modal fade" id="modalVehiculo" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 id="tituloModal" class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="contenidoModal"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/vehiculo.js"></script>
}
