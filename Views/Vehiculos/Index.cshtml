@{
    ViewData["Title"] = "Gestión de Vehículos";
    Layout = "_AdminLayout";
}

<h2 class="fw-bold text-center my-3">🚗 Gestión de Vehículos</h2>

<!-- 🔹 Botón Nuevo Vehículo -->
<div class="text-end mb-3">
    <button class="btn btn-primary shadow-sm" onclick="abrirModalCrear()">
        <i class="bi bi-plus-circle"></i> Nuevo Vehículo
    </button>
</div>

<!-- 🔹 Tabla Responsive -->
<div class="table-responsive shadow-sm">
    <table class="table table-striped table-bordered align-middle mb-0">
        <thead class="table-dark text-center">
            <tr>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Transmisión</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Vehiculos != null && ViewBag.Vehiculos.Rows.Count > 0)
            {
                foreach (System.Data.DataRow row in ViewBag.Vehiculos.Rows)
                {
                    bool estado = Convert.ToBoolean(row["Estado"]);

                    <tr class="@(estado ? "" : "table-secondary")">
                        <td>@row["Marca"]</td>
                        <td>@row["Modelo"]</td>
                        <td>@row["Transmision"]</td>
                        <td class="text-center">
                            @if (estado)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </td>
                        <td class="text-center">
                            <button class="btn btn-warning btn-sm text-white"
                                    onclick="abrirModalEditar(@row["IdVehiculo"])">
                                <i class="bi bi-pencil-square"></i> Editar
                            </button>

                            <button class="btn btn-info btn-sm text-white"
                                    onclick="abrirModalDetalles(@row["IdVehiculo"])">
                                <i class="bi bi-eye"></i> Ver
                            </button>

                            <button class="btn btn-danger btn-sm"
                                    onclick="abrirModalEliminar(@row["IdVehiculo"])">
                                <i class="bi bi-trash3"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-3">
                        <i class="bi bi-info-circle"></i> No hay vehículos registrados.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- 🔹 Modal Reutilizable -->
<div class="modal fade" id="modalVehiculo" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="tituloModal">Vehículo</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body" id="contenidoModal">
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 🔹 Scripts -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/vehiculo.js?v=@DateTime.Now.Ticks"></script>
}
