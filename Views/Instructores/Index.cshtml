@{
    ViewData["Title"] = "Gesti√≥n de Instructores";
    Layout = "_AdminLayout";
}

<h2 class="fw-bold text-center my-3">Gesti√≥n de Instructores</h2>

<div class="text-end mb-3">
    <button class="btn btn-primary" onclick="abrirModalCrearInstructor()">
        ‚ûï Nuevo Instructor
    </button>
</div>

<table class="table table-bordered table-striped align-middle text-center">
    <thead class="table-dark">
        <tr>
            <th>Instructor</th>
            <th>Licencias</th> <!-- ‚úÖ Nuevo campo -->
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inst in ViewBag.Instructores.Rows)
        {
            int id = Convert.ToInt32(inst["IdInstructor"]);
            bool activo = Convert.ToBoolean(inst["Estado"]);

            <tr class="@(activo ? "" : "table-secondary")">

                <!-- ‚úÖ Nombre -->
                <td>@inst["Nombre"] @inst["Apellidos"]</td>

                <!-- ‚úÖ Licencias como badges -->
                <td>
                    @if (ViewBag.LicenciasPorInstructor.ContainsKey(id))
                    {
                        foreach (var lic in ViewBag.LicenciasPorInstructor[id])
                        {
                            <span class="badge bg-primary me-1">@lic</span>
                        }
                    }
                    else
                    {
                        <span class="badge bg-secondary">Sin licencias</span>
                    }
                </td>

                <!-- ‚úÖ Estado -->
                <td>
                    @if (activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>

                <!-- ‚úÖ Acciones -->
                <td>
                    <button class="btn btn-warning btn-sm text-white" onclick="abrirModalEditarInstructor(@id)">‚úèÔ∏è</button>

                    @* <button class="btn btn-info btn-sm text-white"
                        onclick="abrirModalDetalles(@id)">üîç</button> *@

                    <button class="btn btn-danger btn-sm" onclick="abrirModalEliminarInstructor(@id)">üóëÔ∏è</button>
                </td>

            </tr>
        }
    </tbody>
</table>
<!-- üîπ MODAL GLOBAL PARA INSTRUCTORES -->
<div class="modal fade" id="modalInstructor" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="tituloModal">Instructor</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body" id="contenidoModal">
                <div class="text-center py-4 text-muted">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/instructores.js?v=@DateTime.Now.Ticks"></script>
}