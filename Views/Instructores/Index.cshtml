@{
    ViewData["Title"] = "Gesti√≥n de Instructores";
    Layout = "_AdminLayout";
}

<h2 class="fw-bold text-center my-3">Gesti√≥n de Instructores</h2>

<!-- üîπ Bot√≥n Nuevo Instructor -->
<div class="text-end mb-3">
    <button class="btn btn-primary" onclick="abrirModalCrearInstructor()">
        <i class="bi bi-person-plus"></i> Nuevo Instructor
    </button>
</div>

<!-- üîπ Tabla de Instructores -->
<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Instructores != null && ViewBag.Instructores.Rows.Count > 0)
        {
            foreach (System.Data.DataRow row in ViewBag.Instructores.Rows)
            {
                bool activo = Convert.ToBoolean(row["Estado"]);
                <tr class="@(activo ? "" : "table-secondary") text-center">
                    <td>@row["Nombre"]</td>
                    <td>@row["Apellidos"]</td>
                    <td>
                        @if (activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-warning btn-sm text-white"
                                onclick="abrirModalEditarInstructor(@row["IdInstructor"])">
                            ‚úèÔ∏è Editar
                        </button>

                        <button class="btn btn-info btn-sm text-white"
                                onclick="abrirModalDetallesInstructor(@row["IdInstructor"])">
                            üîç Ver
                        </button>

                        <button class="btn btn-danger btn-sm"
                                onclick="abrirModalEliminarInstructor(@row["IdInstructor"])">
                            üóëÔ∏è Eliminar
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted py-4">
                    No hay instructores registrados.
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- üîπ Modal Reutilizable -->
<div class="modal fade" id="modalInstructor" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="tituloModal">Instructor</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="contenidoModal">
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- üîπ Scripts -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/instructores.js"></script>
}
