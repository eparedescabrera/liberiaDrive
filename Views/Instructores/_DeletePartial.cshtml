@model LiberiaDriveMVC.Models.Instructor
@{
    Layout = null;
}

<div class="container mt-3">
    <div class="alert alert-warning border-0 shadow-sm">
        <h5 class="fw-bold text-danger mb-2">
            ⚠️ Confirmar eliminación
        </h5>

        <p class="mb-2">¿Deseas eliminar al instructor siguiente?</p>

        <ul class="list-unstyled mb-3">
            <li><strong>Nombre:</strong> @Model.Nombre @Model.Apellidos</li>
           <li><strong>Estado:</strong> @(Model.Estado == true ? "Activo" : "Inactivo")</li>

        </ul>

        <p class="text-muted small mb-0">
            Esta acción también eliminará sus licencias asociadas.  
            <strong>No se podrá deshacer.</strong>
        </p>
    </div>

    <form id="formEliminarInstructor" method="post">
        <input type="hidden" name="IdInstructor" value="@Model.IdInstructor" />

        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn btn-danger me-2 px-4">
                <i class="bi bi-trash"></i> Eliminar
            </button>
            <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                <i class="bi bi-x-circle"></i> Cancelar
            </button>
        </div>
    </form>
</div>
