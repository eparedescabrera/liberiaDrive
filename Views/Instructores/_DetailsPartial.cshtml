@model LiberiaDriveMVC.Models.Instructor
@{
    Layout = null;
}

<h5 class="fw-bold text-primary mb-3">
    <i class="bi bi-person-vcard"></i> Detalles del Instructor
</h5>
<hr />

<div class="card shadow-sm border-0">
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <strong>ðŸ‘¤ Nombre:</strong> @Model.Nombre @Model.Apellidos
            </li>

            <li class="list-group-item d-flex align-items-center justify-content-between">
    <strong>ðŸ“Œ Estado:</strong>
    <div class="form-check form-switch m-0">
        <input class="form-check-input"
               type="checkbox"
               id="estadoSwitch"
               @(Model.Estado == true ? "checked" : "")
               disabled />
        <label class="form-check-label ms-2" for="estadoSwitch">
            @(Model.Estado == true ? "Activo" : "Inactivo")
        </label>
    </div>
</li>

        </ul>
    </div>
</div>

<div class="text-end mt-3">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="bi bi-x-circle"></i> Cerrar
    </button>
</div>

@section Scripts {
<script>
    // ðŸŸ¢ Efecto visual dinÃ¡mico
    document.addEventListener("DOMContentLoaded", function () {
        const chk = document.getElementById("estadoSwitch");
        const label = chk.nextElementSibling;

        if (chk.checked) {
            label.classList.add("text-success", "fw-bold");
        } else {
            label.classList.add("text-danger", "fw-bold");
        }
    });
</script>
}
