@{
    ViewData["Title"] = "Gesti√≥n de Inscripciones";
    var dt = ViewBag.Inscripciones as System.Data.DataTable;
     Layout = "_AdminLayout";
}

<!-- =========================================================
üìò ENCABEZADO
========================================================= -->
<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h2 class="fw-bold text-dark mb-0">
            <i class="bi bi-journal-bookmark-fill text-primary"></i> Gesti√≥n de Inscripciones
        </h2>

        <button class="btn btn-primary shadow-sm" onclick="abrirModalCrear()">
            <i class="bi bi-plus-circle"></i> Nueva Inscripci√≥n
        </button>
    </div>

    <!-- =========================================================
    üü¢ BARRA DE B√öSQUEDA
    ========================================================= -->
    <div class="mb-4">
        <div class="input-group">
            <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
            <input type="text" id="buscarTexto" class="form-control" placeholder="Buscar por cliente o tipo de curso..." />
            <button class="btn btn-outline-secondary" type="button" onclick="buscarInscripciones()">
                Buscar
            </button>
        </div>
    </div>

    <!-- =========================================================
    üü¶ LISTADO DE INSCRIPCIONES EN FORMATO DE TARJETAS
    ========================================================= -->
    <div class="row g-4" id="contenedorInscripciones">
        @if (dt != null && dt.Rows.Count > 0)
        {
            foreach (System.Data.DataRow row in dt.Rows)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card shadow-sm border-0 rounded-3 h-100">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-person-fill"></i> @row["NombreCliente"]</span>
                            <span class="badge bg-light text-dark">@row["TipoCurso"]</span>
                        </div>

                        <div class="card-body">
                            <p class="mb-2">
                                <i class="bi bi-clock-history text-secondary"></i>
                                <strong>Duraci√≥n:</strong> @row["Duracion"] hrs
                            </p>
                            <p class="mb-2">
                                <i class="bi bi-cash-stack text-success"></i>
                                <strong>Costo:</strong> ‚Ç° @String.Format("{0:N2}", row["Costo"])
                            </p>
                            <p class="mb-0">
                                <i class="bi bi-calendar3 text-info"></i>
                                <strong>Fecha Inscripcion:</strong> @Convert.ToDateTime(row["FechaInscripcion"]).ToString("dd/MM/yyyy")
                            </p>
                        </div>

                        <div class="card-footer bg-light d-flex justify-content-between">
                            <button class="btn btn-warning btn-sm text-white shadow-sm"
                                    onclick="abrirModalEditar(@row["IdInscripcion"])">
                                <i class="bi bi-pencil-square"></i> Editar
                            </button>
                            <button class="btn btn-danger btn-sm shadow-sm"
                                    onclick="abrirModalEliminar(@row["IdInscripcion"])">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted py-5">
                <i class="bi bi-inbox display-3"></i>
                <h5 class="mt-3">No hay inscripciones registradas.</h5>
                <p>Comience creando una nueva inscripci√≥n.</p>
            </div>
        }
    </div>
</div>

<!-- =========================================================
üßæ MODAL GLOBAL DE INSCRIPCIONES (SE CARGA APARTE)
========================================================= -->
@await Html.PartialAsync("_ModalInscripcion")

<!-- =========================================================
üìú SCRIPTS
========================================================= -->
@section Scripts {
    <script src="~/js/inscripcion.js"></script>

    <script>
        // =====================================================
        // üîç B√öSQUEDA DIN√ÅMICA (opcional AJAX)
        // =====================================================
        function buscarInscripciones() {
            let texto = $("#buscarTexto").val().trim();

            if (texto.length === 0) {
                location.reload();
                return;
            }

            $.get("/InscripcionCurso/BuscarInscripciones", { term: texto }, function (data) {
                let contenedor = $("#contenedorInscripciones");
                contenedor.empty();

                if (data.length === 0) {
                    contenedor.append(`
                        <div class="col-12 text-center text-muted py-5">
                            <i class="bi bi-search display-3"></i>
                            <h5 class="mt-3">No se encontraron resultados.</h5>
                        </div>
                    `);
                    return;
                }

                data.forEach(i => {
                    contenedor.append(`
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <div class="card shadow-sm border-0 rounded-3 h-100">
                                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-person-fill"></i> ${i.Cliente}</span>
                                    <span class="badge bg-light text-dark">${i.TipoCurso}</span>
                                </div>

                                <div class="card-body">
                                    <p class="mb-2"><i class="bi bi-clock-history text-secondary"></i>
                                        <strong>Duraci√≥n:</strong> ${i.Duracion} hrs</p>
                                    <p class="mb-2"><i class="bi bi-cash-stack text-success"></i>
                                        <strong>Costo:</strong> ‚Ç° ${parseFloat(i.Costo).toLocaleString()}</p>
                                    <p class="mb-0"><i class="bi bi-calendar3 text-info"></i>
                                        <strong>Fecha:</strong> ${i.FechaInscripcion}</p>
                                </div>

                                <div class="card-footer bg-light d-flex justify-content-between">
                                    <button class="btn btn-warning btn-sm text-white" onclick="abrirModalEditar(${i.IdInscripcion})">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </button>
                                    <button class="btn btn-danger btn-sm" onclick="abrirModalEliminar(${i.IdInscripcion})">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </div>
                            </div>
                        </div>
                    `);
                });
            });
        }
    </script>
}
