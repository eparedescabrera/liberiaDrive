@{
    ViewData["Title"] = "Reportes Data Warehouse";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3><i class="bi bi-bar-chart-line"></i> Reportes del Data Warehouse</h3>
        <button id="btnActualizarDW" class="btn btn-primary">
            <i class="bi bi-arrow-repeat"></i> Actualizar Data Warehouse
        </button>
    </div>

    <!-- ===================================================== -->
    <!-- ðŸ“Š Tarjetas resumen -->
    <!-- ===================================================== -->
    <div class="row text-center mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-primary">
                <div class="card-body">
                    <h5 class="card-title text-primary">Por Instructor</h5>
                    <canvas id="chartInstructor" height="180"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-success">
                <div class="card-body">
                    <h5 class="card-title text-success">Por Estado</h5>
                    <canvas id="chartEstado" height="180"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-warning">
                <div class="card-body">
                    <h5 class="card-title text-warning">Por Mes</h5>
                    <canvas id="chartMes" height="180"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/reportesDW.js"></script>
}
