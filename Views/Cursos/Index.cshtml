@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Gestión de Cursos";
}


@model IEnumerable<LiberiaDriveMVC.Models.Curso>

<h2 class="fw-bold text-primary mb-4">Cursos</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Agregar Curso
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-primary text-center">
        <tr>
            <th>ID</th>
            <th>Tipo de Curso</th>
            <th>Duración (horas)</th>
            <th>Costo (₡)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No hay cursos registrados.</td>
            </tr>
        }
        else
        {
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.IdCurso</td>
                    <td>@c.TipoCurso</td>
                    <td>@c.Duracion</td>
                    <td>@c.Costo.ToString("C")</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@c.IdCurso" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@c.IdCurso" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
