@model LiberiaDriveMVC.Models.Curso
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Agregar Curso";
}

<div class="container mt-5 col-md-6">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center fw-bold">
            <i class="bi bi-plus-circle"></i> Agregar Curso
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="TipoCurso" class="form-label fw-semibold"></label>
                    <input asp-for="TipoCurso" class="form-control" placeholder="Ej: Curso de manejo bÃ¡sico" />
                    <span asp-validation-for="TipoCurso" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Duracion" class="form-label fw-semibold"></label>
                    <input asp-for="Duracion" type="number" class="form-control" placeholder="Ej: 40" />
                    <span asp-validation-for="Duracion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Costo" class="form-label fw-semibold"></label>
                    <input asp-for="Costo" type="number" step="0.01" class="form-control" placeholder="Ej: 50000" />
                    <span asp-validation-for="Costo" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
